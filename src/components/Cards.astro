---
const { image, title, platforms, description, className } = Astro.props;
---

<div class=`relative w-[480px] max-w-lg bg-black text-white border border-white/40 overflow-hidden ${className}`>

  <div class="relative overflow-hidden">
    <img 
      src={image} 
      alt={title} 
      class="w-full h-64 object-cover transition-transform duration-300 ease-in-out hover:scale-105"
    />
  </div>

  <div class="p-4">
    <h2 class="text-xl font-bold">{title}</h2>
    <p class="text-gray-400 text-xs mt-1">{platforms}</p>
    <p class="mt-1 text-sm">{description}</p>
  </div>
</div>
